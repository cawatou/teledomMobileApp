<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slideswitch="http://schemas.android.com/apk/lib/com.leaking.slideswitch"
    xmlns:slideButton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context="com.skipo.teledom.app.activity.IncomingCallActivity">

        <android.opengl.GLSurfaceView
            android:id="@+id/gl_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shadow" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/background"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txtDoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/button_door"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <com.skipo.teledom.app.widget.SlideButton
            android:id="@+id/btnDoor"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_margin="15dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:enabled="false"
            android:indeterminate="false"
            android:max="100"
            android:padding="2dp"
            android:thumb="@drawable/logout_icon"
            android:thumbOffset="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="35dp">

            <TextView
                android:id="@+id/txtResolve"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/button_answer"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:shadowDx="-1"
                tools:shadowDy="-1" />

            <TextView
                android:id="@+id/txtReject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/button_reject"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:shadowDx="-1"
                tools:shadowDy="-1" />

        </LinearLayout>

        <com.skipo.teledom.app.widget.SlideButton
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:clickable="false"
            android:enabled="false"
            android:indeterminate="false"
            android:max="100"
            android:padding="2dp"
            android:thumb="@drawable/arrow_64_b"
            android:thumbOffset="2dp"
            slideButton:start_position="centr" />

    </FrameLayout>

</RelativeLayout>
